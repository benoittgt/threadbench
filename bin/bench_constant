#!/usr/bin/env bash

PUMATHREADS=${1:-1}

bundle exec puma -C puma.rb -t $PUMATHREADS &
PIDPUMA=$!
sleep 3

echo "Warming up for 15 seconds..."
k6 run --duration 15s k6/constant.js > /dev/null

echo "Benchmarking..."
k6 run --summary-trend-stats "min,avg,med,max,p(95),p(99),p(99.99)" k6/constant.js &
PIDBENCH=$!

wait $PIDBENCH
kill $PIDPUMA
